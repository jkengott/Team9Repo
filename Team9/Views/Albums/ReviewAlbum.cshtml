@model Team9.Models.Rating
@{
    ViewBag.Title = "ReviewAlbum";
}

<h2>ReviewAlbum</h2>

<h2>Review @Html.DisplayFor(model => model.RatingAlbum.AlbumName)</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <div>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.RatingAlbum.AlbumID)
        <dl>
            <dt>
                Rating
            </dt>
            <dd>
                <label class="form-check-label">
                    @Html.RadioButtonFor(model => model.RatingValue, "1", new { htmlAttributes = new { @class = "form-control" } })  1
                </label>
            </dd>
            <dd>
                <label class="form-check-label">
                    @Html.RadioButtonFor(model => model.RatingValue, "2", new { htmlAttributes = new { @class = "form-control" } })  2
                </label>
            </dd>
            <dd>
                <label class="form-check-label">
                    @Html.RadioButtonFor(model => model.RatingValue, "3", new { htmlAttributes = new { @class = "form-control" } })  3
                </label>
            </dd>
            <dd>
                <label class="form-check-label">
                    @Html.RadioButtonFor(model => model.RatingValue, "4", new { htmlAttributes = new { @class = "form-control" } })  4
                </label>
            </dd>
            <dd>
                <label class="form-check-label">
                    @Html.RadioButtonFor(model => model.RatingValue, "5", new { htmlAttributes = new { @class = "form-control" } })  5
                </label>
            </dd>
        </dl>
        <dl>
            <dt>
                Comments
            </dt>
            <dd>
                @Html.TextArea("RatingText", null, new { @class = "form-control" }) <br />
            </dd>
        </dl>
    </div>
    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Commit" class="btn btn-default" />
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to Album", "Details", new { id = Model.RatingAlbum.AlbumID })
</div>


<script src="~/Scripts/jquery-1.10.2.min.js"></script>
<script src="~/Scripts/jquery.validate.min.js"></script>
<script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
