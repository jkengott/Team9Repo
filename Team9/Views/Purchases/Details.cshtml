@model Team9.Models.Purchase
    @using Team9.Models

@{
    ViewBag.Title = "Details";
}

<h2>Checkout</h2>


    <dt>SubTotal:</dt>
    <dd> @ViewBag.subtotal</dd>


@if (ViewBag.discountSubtotal == "-1")
{
        <dt>Discount SubTotal:</dt>
        <dd> @ViewBag.discountSubtotal</dd>
}
<dt>
    Tax (8.5%)
</dt>

<dd>
    @ViewBag.taxTotal
</dd>

<dt>
    Grand Total:
</dt>
<dd>
    @ViewBag.grandTotal
</dd>

<div class="form-group">
    <label class="control-label col-md-2">Credit Cards</label>
    <div class="col-md-10">
        @Html.DropDownList("CreditCardID", (SelectList)ViewBag.AllCards, new { @class = "form-control" })
    </div>
</div>

<div class="form-group">
    <div class="col-md-offset-2 col-md-10">
        <input type="submit" value="CompletePurchase" class="btn btn-default" />
    </div>
</div>


    <div>
        @Html.ActionLink("Purchase", "Details", "Purchases", new { id = Model.PurchaseID }, new { @class = "btn btn-success" })
    </div>
