@model Team9.Models.PurchaseItem
    @using Team9.Models

@{
    ViewBag.Title = "Delete";
}

<h2>Delete</h2>

<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>Purchase</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @if (!Model.isAlbum)
            {
                Html.DisplayNameFor(model => model.PurchaseItemSong.SongName);
            }
            else
            {
                Html.DisplayNameFor(model => model.PurchaseItemAlbum.AlbumName);
            }
        </dt>
        <dd>
            @if (!Model.isAlbum)
            {
                Html.DisplayFor(model => model.PurchaseItemSong.SongName);
            }
            else
            {
                Html.DisplayFor(model => model.PurchaseItemAlbum.AlbumName);
            }
        </dd>


        <dt>
            @if (!Model.isAlbum)
            {
                if (Model.PurchaseItemSong.isDiscoutned)
                {
                    Html.DisplayNameFor(model => model.PurchaseItemSong.DiscountPrice);
                }
                else
                {
                    Html.DisplayNameFor(model => model.PurchaseItemSong.SongPrice);
                }
            }
            else
            {
                if(Model.PurchaseItemAlbum.isDiscounted)
                {
                    Html.DisplayNameFor(model => model.PurchaseItemAlbum.DiscountAlbumPrice);
                }
                else
                {
                    Html.DisplayNameFor(model => model.PurchaseItemAlbum.AlbumPrice);
                }

            }
        </dt>
        <dd>
            @if (!Model.isAlbum)
            {
                if (Model.PurchaseItemSong.isDiscoutned)
                {
                    Html.DisplayFor(model => model.PurchaseItemSong.DiscountPrice);
                }
                else
                {
                    Html.DisplayFor(model => model.PurchaseItemSong.SongPrice);
                }
            }
            else
            {
                if (Model.PurchaseItemAlbum.isDiscounted)
                {
                    Html.DisplayFor(model => model.PurchaseItemAlbum.DiscountAlbumPrice);
                }
                else
                {
                    Html.DisplayFor(model => model.PurchaseItemAlbum.AlbumPrice);
                }

            }
        </dd>

    </dl>

    @using (Html.BeginForm()) {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Delete" class="btn btn-default" /> |
            @Html.ActionLink("Back to List", "Index")
        </div>
    }
</div>
